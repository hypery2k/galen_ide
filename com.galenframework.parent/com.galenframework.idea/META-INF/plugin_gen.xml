<idea-plugin version="2">
	<extensions defaultExtensionNs="org.eclipse.xtext.idea">
		<package
			uri="http://www.galenframework.com/Spec"
			class="com.galenframework.spec.SpecPackage"
		/>
		<resourceFactory 
			type="gspec"
			class="org.eclipse.xtext.resource.IResourceFactory"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
		/>
		<resourceServiceProvider
			uriExtension="gspec"
			class="org.eclipse.xtext.idea.resource.IResourceIdeaServiceProvider"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
		/>

		<lang.setup
			language="com.galenframework.Spec"
			implementationClass="com.galenframework.idea.SpecIdeaSetup"
		/>
	</extensions>

	<extensions defaultExtensionNs="com.intellij">
		<psi.treeChangePreprocessor implementation="com.galenframework.idea.lang.psi.SpecCodeBlockModificationListener"/>

		<fileTypeFactory implementation="com.galenframework.idea.lang.SpecFileTypeFactory"/>
		<stubElementTypeHolder class="com.galenframework.idea.lang.SpecElementTypeProvider"/>
		<lang.ast.factory 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.lang.BaseXtextASTFactory"
		/>
		<lang.parserDefinition 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="com.galenframework.idea.lang.parser.SpecParserDefinition"
		/>
		<lang.findUsagesProvider 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.findusages.BaseXtextFindUsageProvider"
		/>
		<lang.refactoringSupport 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.refactoring.BaseXtextRefactoringSupportProvider"
		/>
		<lang.namesValidator 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="com.intellij.lang.refactoring.NamesValidator"
		/>
		<lang.syntaxHighlighterFactory key="com.galenframework.Spec" implementationClass="com.galenframework.idea.highlighting.SpecSyntaxHighlighterFactory" />
		<lang.braceMatcher 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="com.intellij.lang.PairedBraceMatcher"
		/>
		<annotator 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="org.eclipse.xtext.idea.annotation.IssueAnnotator"
		/>
		<completion.contributor language="com.galenframework.Spec" implementationClass="com.galenframework.idea.completion.SpecCompletionContributor"/>
		<pom.declarationSearcher implementation="com.galenframework.idea.lang.pom.SpecPomDeclarationSearcher"/>

		<lang.psiStructureViewFactory 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="com.intellij.lang.PsiStructureViewFactory"
		/>
		<facetType implementation="com.galenframework.idea.facet.SpecFacetType"/>
      	<lang.documentationProvider 
      		language="com.galenframework.Spec"
      		factoryClass="com.galenframework.idea.SpecExtensionFactory"
      		implementationClass="org.eclipse.xtext.idea.documentation.IdeaDocumentationProvider"
      	/>
		<colorSettingsPage implementation="com.galenframework.idea.highlighting.SpecColorSettingsPage"/>
		<highlightVisitor implementation="com.galenframework.idea.highlighting.SpecSemanticHighlightVisitor"/>

		<lang.formatter 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="com.intellij.formatting.FormattingModelBuilder"
		/>
		<lang.commenter 
			language="com.galenframework.Spec"
			factoryClass="com.galenframework.idea.SpecExtensionFactory"
			implementationClass="com.intellij.lang.CodeDocumentationAwareCommenter"
		/>
	</extensions>
</idea-plugin>
